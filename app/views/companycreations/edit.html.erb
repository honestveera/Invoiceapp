
<div class="jumbotron">
<h3 class="text-primary">Companycreation</h3>
<%= render 'form1' %>
<h3 class="text-success">CompanycreationDetails</h3>
<table class="table table-bordered table-hover sortable">
  <thead class="bg-success">
    <tr>
      <th class="text-info">Companyname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companycreations.each do |companycreation| %>
      <tr>
        <td><%= companycreation.companyname %></td>
        <td><%= link_to 'SHOW', companycreation,:class=>"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'EDIT', edit_companycreation_path(companycreation),:class=>"btn btn-info btn-sm"%></td>
        <td><%= link_to 'DESTROY', companycreation, method: :delete,:class=>"btn btn-danger btn-sm",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
